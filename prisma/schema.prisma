generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String?
  projects Project[]
}

model Project {
  id       String   @id @default(cuid())
  name     String
  repoUrl  String
  stars    Int      @default(0)
  userId   String
  user     User     @relation(fields: [userId], references: [id])
}
